<div class='navbar is-dark'>
  <div class='navbar-brand'>
    <%= link_to 'Homepage', root_path, class:'navbar-item title is-3' %>
  </div>
  <% if user_signed_in? %>
    <div class='navbar-start navbar-item'>
      <%= link_to new_user_event_path(current_user), class: 'button is-primary' do %>
      <%= icon('far', 'sticky-note') %>&nbsp;&nbsp;Create Event
      <% end %>
    </div>
  <% end %>

  <div class='navbar-end'>
    <% if user_signed_in? %>
      <p class='navbar-item'>signed in as: <%= current_user.username %></p>
    <% end %>

    <div class='navbar-item buttons'>
      <% if user_signed_in? %>
        <%= link_to user_path(current_user), class: 'button is-info is-outlined' do %>
          <%= icon('fas', 'user') %>&nbsp;&nbsp;Profile
        <% end %>
        <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'button is-danger' %>
      <% else %>
        <%= link_to 'Sign up', new_user_registration_path, class: 'button is-primary' %>
        <%= link_to 'Log in', new_user_session_path, class:'button is-light is-outlined' %>
      <% end %>
    </div>
  </div>
</div>
