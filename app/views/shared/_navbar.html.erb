<nav class='navbar is-dark'>
  <div class='navbar-brand'>
    <div class='navbar-item'>
      <%= link_to 'Homepage', root_path, class:'title is-3 has-text-white' %>
    </div>

    <div class='navbar-burger'>
        <span aria-hidden=true></span>
        <span aria-hidden=true></span>
        <span aria-hidden=true></span>
    </div>
  </div>

  <div class='navbar-menu'>
    <div class='navbar-start'>
      <% if user_signed_in? %>
        <div class='navbar-item'>
          <%= link_to new_user_event_path(current_user), class: 'button is-primary' do %>
          <%= icon('far', 'sticky-note') %>&nbsp;&nbsp;Create Event
          <% end %>
        </div>
        
        <div class='navbar-item'>
          <%= render 'shared/navbar_dropdown' %>
        </div>

        <div class= 'navbar-item container'>
          <%= render 'shared/navbar_user_list' %>
        </div>
      <% end %>
    </div>


