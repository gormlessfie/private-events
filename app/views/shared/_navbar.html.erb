          <%= link_to user_path(current_user), class: 'button is-info is-outlined' do %>
            <%= icon('fas', 'user') %>&nbsp;&nbsp;Profile
          <% end %>

          <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'button is-danger' %>
