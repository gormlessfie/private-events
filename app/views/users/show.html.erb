<section class='section'>
  <h1 class='container title is-1'>Your Events</h1>
</section>

<div class='container'>
  <% @events.each do |event| %>
    <div class='box'>
      <h2 class='title is-3'><%= event.title %></h2>
      <h3 class='subtitle is-6'>
        created by: <%= event.creator.username%><br>
        Event date: <%= event.event_date %>
      </h3>

      <%= simple_format(event.description, class: 'subtitle is-6') %>
      <div class='buttons'>
        <%= link_to 'Event page', user_event_path(current_user, event), class: 'button is-link is-outlined'%>
        <%= link_to 'Edit event', edit_user_event_path(current_user, event), class: 'button is-info is-outlined' %>
        <%= link_to 'Delete event', user_event_path(current_user, event), method: :delete,
            data: { confirm: 'Are you sure?' }, class: 'button is-danger is-outlined' %>
      </div>
    </div>
  <% end %>
</div>
