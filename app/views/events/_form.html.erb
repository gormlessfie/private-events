<div class='container'>
  <h1 class='title is-1'><%= type %> Event</h1>
  <%= form_with model: [@user, @event] do |form| %>
    <div class='block'>
      <%= form.label :title %><br>
      <%= form.text_field :title, class: 'input is-large' %>
    </div>

    <div class='block'>
      <%= form.label :description%>
      <%= form.text_area :description, class: 'textarea is-medium' %>
    </div>

    <div class='block buttons'>
      <%= form.submit type.concat(' Event'), class: 'button is-primary' %>
    </div>
  <% end %>
</div>
